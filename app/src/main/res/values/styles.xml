<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="std_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CardStyle" parent="std_layout">
        <item name="cardCornerRadius">@dimen/radius</item>
        <item name="cardElevation">@dimen/elevation</item>
    </style>
    <!-- Image Header -->
    <style name="h_image" parent="std_layout">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/img_header</item>
    </style>
    <!-- Button -->
    <style name="btn_style" parent="std_layout">
        <item name="android:textColor">@color/btn_text</item>
    </style>
    <!-- Point Section -->
    <style name="team_name" parent="std_layout">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/tn_p</item>
        <item name="android:textColor">@color/point_text</item>
        <item name="android:textSize">@dimen/tn_size</item>
    </style>

    <style name="team_point" parent="std_layout">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/p_padding_b</item>
        <item name="android:textColor">@color/h_point_text</item>
        <item name="android:textSize">@dimen/p_text_size</item>
    </style>

    <style name="view_point">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/v_m</item>
        <item name="android:layout_marginTop">@dimen/v_m</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="layout_point">
        <item name="android:layout_width">@dimen/p_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- Board Point -->
    <style name="bp_head">
        <item name="android:layout_width">@dimen/p_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-medium</item>
        <item name="android:textColor">@color/h_point_text</item>
        <item name="android:textSize">@dimen/bp_size</item>
    </style>

    <style name="bp_row">
        <item name="android:layout_width">@dimen/p_width</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- Dialog -->
    <style name="layout_w" parent="std_layout">
        <item name="android:layout_marginTop">@dimen/c_htop</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="dialog_icon">
        <item name="android:layout_width">@dimen/w_w</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:tint">@android:color/holo_green_light</item>
        <item name="android:layout_marginTop">@dimen/c_hbottom</item>
        <item name="android:src">@drawable/ic_stat_gcs_notification</item>
    </style>

    <style name="dialog_text">
        <item name="android:layout_width">@dimen/w_w</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textColor">@android:color/holo_green_light</item>
        <item name="android:textSize">@dimen/w_t</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="dialog_button">
        <item name="android:background">@drawable/abc_btn_borderless_material</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/c_hbottom</item>
        <item name="android:textColor">@android:color/holo_green_light</item>
        <item name="android:layout_gravity">right</item>
    </style>
</resources>
